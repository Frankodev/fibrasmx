---
import BlogPostPreviewCategory from "./BlogPostPreviewCategory.astro";

const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post: any) => (
      <li>
        <BlogPostPreviewCategory post={post} />
      </li>
    ))
  }
</ul>

<style>
  ul {
    margin: 0 0 10vh 0;
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }
</style>
