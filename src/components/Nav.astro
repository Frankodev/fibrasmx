---
import NavLink from "./NavLink.astro";

const listLinks = [
  { linkName: "Inicio", path: "/" },
  { linkName: "Las Fibras", path: "/las-fibras" },
  { linkName: "Comunidad", path: "/comunidad" },
  { linkName: "Blog", path: "/blog" },
];
---

<nav class="nav">
  <div class="logo">
    <a href="/">Fibras MX</a>
  </div>

  <ul class="nav__links">
    {
      listLinks.map((link) => (
        <li class="nav__link">
          <NavLink href={link.path}>{link.linkName} </NavLink>
        </li>
      ))
    }
  </ul>
</nav>
