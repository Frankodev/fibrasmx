---
import { settings } from "../data/settings";
import Container from "./Container.astro";
import SocialList from "./SocialList.astro";
import LittleSticksPlug from "./LittleSticksPlug.astro";
---

<footer>
  <Container>
    <div class="footer-links__grid">
      <ul>
        <li><strong>Enlaces</strong></li>
        <li>
          <a class="link__footer" href="/">Inicio</a>
        </li>
        <li>
          <a class="link__footer" href="/las-fibras">Las Fibras</a>
        </li>
        <li>
          <a class="link__footer" href="/comunidad">Comunidad</a>
        </li>
        <li>
          <a class="link__footer" href="/blog">Blog</a>
        </li>
      </ul>
      <ul>
        <li><strong>Legal</strong></li>
        <li>
          <a class="link__footer" href="/">Privacidad</a>
        </li>
        <li>
          <a class="link__footer" href="/">Terminos</a>
        </li>
        <li>
          <a class="link__footer" href="/comunidad">Equipo Fibras MX</a>
        </li>
      </ul>
    </div>

    {
      settings.showLittleSticksPlug && (
        <div>
          <LittleSticksPlug site={"https://www.facebook.com/FibrasMexico/"} />
        </div>
      )
    }
    <div class="footer-bottom__container">
      <p>&copy; {new Date().getFullYear()} {settings.name}</p>
      <SocialList />
    </div>
  </Container>
</footer>

<style>
  footer {
    position: relative;
    min-height: 200px;
    background-color: var(--theme-footer-background);
    color: var(--theme-on-footer-background);
  }

  .footer-links__grid {
    padding: 10vh 0;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .footer-links__grid ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links__grid ul li:first-of-type {
    margin-bottom: 0.5rem;
  }

  .footer-links__grid ul li strong {
    font-weight: 900;
  }

  .link__footer {
    font-weight: 400;
  }

  .link__footer:hover,
  .link__footer:focus {
    text-decoration: underline;
  }

  .footer-bottom__container {
    position: relative;
    bottom: 0;
    padding: 0 0 1rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--step--2);
  }

  @media (max-width: 768px) {
    .footer-links__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 480px) {
    .footer-links__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-bottom__container {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>
