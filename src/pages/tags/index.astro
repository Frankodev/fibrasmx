---
import BaseLayout from "../../layouts/BaseLayout.astro";

// traego todos los post con el metodo Astro.glob()
const allPosts = await Astro.glob("../posts/*.md");
// filtro todos los tags y se setean para eliminar repetidos.
const allTags = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];

const pageTitle = "Tags";
---

<BaseLayout pageTitle={pageTitle}>
  <ul class="tags">
    {
      allTags.map((tag) => (
        <li class="tag">
          <a class="tag__link" href={tag}>
            {tag}
          </a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
